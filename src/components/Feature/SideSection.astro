---
import Button from "@components/Button/Button.astro";
import { Image } from "astro:assets";

interface Props {
	title: string;
	subtitle?: string;
	content: string;
	imageSrc: any;
	imageAlt: string;
	buttonText?: string;
	buttonHref?: string;
	reversed?: boolean;
	id?: string;
}

const {
	title,
	subtitle,
	content,
	imageSrc,
	imageAlt,
	buttonText,
	buttonHref,
	reversed = false,
	id,
} = Astro.props as Props;
---

<section {id} class="site-container scroll-mt-10 py-8 md:py-12">
	<div class:list={["flex flex-col md:flex-row", { "md:flex-row-reverse": reversed }]}>
		<div class:list={["md:w-2/3", { "md:pl-12": reversed, "md:pr-12": !reversed }]}>
			<h2 class="h3 text-primary-500 text-pretty uppercase">{title}</h2>
			{subtitle && <h3 class="h2 mt-4">{subtitle}</h3>}
			<div class="bg-base-100 mt-8 p-8 md:mb-20 lg:text-lg">
				<p class="whitespace-pre-line">
					{content}
				</p>
				{
					buttonText && buttonHref && (
						<div class="mt-8 flex justify-end">
							<Button variant="primary" href={buttonHref}>
								{buttonText}
							</Button>
						</div>
					)
				}
			</div>
		</div>
		<div class="mr-auto max-w-md md:w-1/3 md:max-w-none">
			<div class="my-auto aspect-[3/4] w-full overflow-hidden">
				<Image
					src={imageSrc}
					alt={imageAlt}
					width={450}
					densities={[1.5, 2]}
					class="h-auto min-h-full w-full min-w-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>
