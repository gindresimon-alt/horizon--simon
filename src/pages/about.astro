---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = t('about.page.title') + " | Simon Gindre";
const description = t('about.page.desc');
---

<BaseLayout {title} {description} navStartStyle="white">
	{/* Hero Section - Simple Text Only */}
	<section class="site-container py-24 md:py-32">
		<div class="mx-auto max-w-4xl text-center">
			<h1 class="h1 mb-8">{t('about.hero.title')}</h1>
			<p class="text-xl text-neutral-600 dark:text-neutral-400 md:text-2xl">
				{t('about.hero.subtitle')}
			</p>
		</div>
	</section>

	{/* Intro Text */}
	<section class="site-container pb-16 md:pb-24">
		<div class="mx-auto max-w-3xl text-center">
			<h2 class="h2 mb-8">{t('about.vision.title')}</h2>
			<p class="text-lg leading-relaxed lg:text-xl">
				{t('about.vision.content')}
			</p>
		</div>
	</section>

	{/* Values Section */}
	<section class="bg-base-200 py-16 md:py-24">
		<div class="site-container">
			<h2 class="h2 mb-16 text-center">{t('about.values.title')}</h2>
			<div class="grid gap-12 md:grid-cols-3">
				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
						</svg>
					</div>
					<h3 class="h4 mb-4 uppercase">{t('about.values.v1.title')}</h3>
					<p>{t('about.values.v1.desc')}</p>
				</div>
				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="h4 mb-4 uppercase">{t('about.values.v2.title')}</h3>
					<p>{t('about.values.v2.desc')}</p>
				</div>
				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 text-primary-600">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="h4 mb-4 uppercase">{t('about.values.v3.title')}</h3>
					<p>{t('about.values.v3.desc')}</p>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
